            <hamburgerMenu:HamburgerMenuItem Text="Home" SelectionCommand="{Binding MyCommand}"/>
            <hamburgerMenu:HamburgerMenuItem Text="Search"/>
        </hamburgerMenu:HamburgerMenu>-->
        <local:LoginControl VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="LogControl"></local:LoginControl>
        <local:RegistrControl VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden" x:Name="RegControl"></local:RegistrControl>
    </Grid>
